<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"

android:background="@drawable/bgcity"

tools:context="com.example.veraj.aplicacionandroid.OWCity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Introduce el nombre de la ciudad"
    android:layout_gravity="center" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/input_city"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searchCities"
        android:text="Search"
        android:background="#fd30074b"
        android:textColor="#fff"
        android:layout_gravity="center" />
</LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        card_view:cardBackgroundColor="#8d30074b"
        card_view:cardCornerRadius="10dp"
        android:id="@+id/cardview"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/citynameow"
                android:padding="3dp"
                android:paddingTop="10dp"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="fill_horizontal|center"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="265dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="0.55">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre de Ciudad"
                        android:gravity="center"
                        android:id="@+id/tempow"
                        android:layout_gravity="center|right"
                        android:padding="3dp"
                        android:paddingTop="10dp"
                        android:textColor="#ffffff"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left|center"
                        android:id="@+id/detailsow"
                        android:layout_gravity="center|right"
                        android:padding="3dp"
                        android:paddingTop="10dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left|center"
                        android:id="@+id/tv4"
                        android:layout_gravity="center|right"
                        android:padding="3dp"
                        android:paddingTop="10dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="2dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left|center"
                        android:id="@+id/tv5"
                        android:layout_gravity="center|right"
                        android:padding="3dp"
                        android:paddingTop="10dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="2dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left|center"
                        android:id="@+id/tv6"
                        android:layout_gravity="center|right"
                        android:padding="3dp"
                        android:paddingTop="10dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="2dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left|center"
                        android:id="@+id/tv7"
                        android:layout_gravity="center|right"
                        android:padding="3dp"
                        android:paddingTop="10dp"
                        android:textColor="#ffffff"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:id="@+id/imageow"
                    android:layout_weight="0.55"
                    android:src="@drawable/w36" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>